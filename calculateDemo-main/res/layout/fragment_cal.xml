<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".CalFragment">

    <TextView
        android:id="@+id/tvScore3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="得分:0"
        android:textColor="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <TextView
        android:id="@+id/tvOp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="#2196F3"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvOperator"
        app:layout_constraintEnd_toStartOf="@+id/tvOperator"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/tvOperator" />

    <TextView
        android:id="@+id/tvOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="#2196F3"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvOp2"
        app:layout_constraintEnd_toStartOf="@+id/tvOp2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvOp1"
        app:layout_constraintTop_toTopOf="@+id/tvOp2" />

    <TextView
        android:id="@+id/tvOp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textColor="#2196F3"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvOperator"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textColor="#2196F3"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/Text"
        app:layout_constraintEnd_toStartOf="@+id/Text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvOp2"
        app:layout_constraintTop_toTopOf="@+id/Text" />

    <TextView
        android:id="@+id/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="?"
        android:textColor="#2196F3"
        android:textSize="45sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/tvScore3" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="请开始答题:"
        android:textColor="#03A9F4"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn2"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn2" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn5"
        app:layout_constraintStart_toStartOf="@+id/btn3"
        app:layout_constraintTop_toTopOf="@+id/btn5" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn7"
        app:layout_constraintStart_toStartOf="@+id/btn5"
        app:layout_constraintTop_toTopOf="@+id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn8"
        app:layout_constraintStart_toStartOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="@+id/btn8" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="C"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn0"
        app:layout_constraintEnd_toEndOf="@+id/btn7"
        app:layout_constraintTop_toTopOf="@+id/btn0" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnOk"
        app:layout_constraintEnd_toEndOf="@+id/btn8"
        app:layout_constraintTop_toTopOf="@+id/btnOk" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4803A9F4"
        android:gravity="center"
        android:text="确定"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />
</androidx.constraintlayout.widget.ConstraintLayout>